    <Button
        android:id="@+id/btnProductManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý danh sách sản phẩm (thêm, xóa , sửa)" />

    <Button
        android:id="@+id/btnCounponManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý khuyến mại (admin)" />

    <Button
        android:id="@+id/btnUsingCoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
