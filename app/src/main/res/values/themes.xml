<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.N20DCCN143_LeVietThanh" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="colorAccent">@color/mainColor</item>
    </style>

    <style name="btn" parent="Theme.AppCompat.Light.NoActionBar">
         Primary brand color.
        <item name="colorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/sora_regular</item>
    </style>
    <style name="toolbartxt" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize" >16dp</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="textAllCaps">false</item>
        <item name="android:background" >@color/white</item>
<!--        <item name="theme" >@style/Base.Theme.TestApp</item>-->
        <item name= "popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/toolbartxt</item>
    </style>

    <style name="MenuTheme" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="btn_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Customer" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
<!--        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>-->
        <item name="materialCalendarTheme">@style/MaterialCalendarTheme</item>
        <item name="materialTimePickerTheme">@style/AppTheme.MaterialTimePickerTheme</item>
        <item name="materialCalendarFullscreenTheme">
            @style/CustomThemeOverlay_MaterialCalendar_Fullscreen
        </item>
    </style>
    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen" parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">false</item>
    </style>
    <style name="SpinnerTheme" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:background">@drawable/spinnerbg</item>
        <item name="android:popupBackground">@drawable/spinnerbg</item>

        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="AppTheme.MaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/lightGrey</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar"/>

    <style name="roundimageview" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">70dp</item>
        <item name="cornerSizeBottomRight">70dp</item>
    </style>

    <style name="circularimg" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Các thuộc tính của chủ đề -->
        <item name="colorControlNormal">@color/mainColor</item>
    </style>

    <style name="DateRange" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
</resources>